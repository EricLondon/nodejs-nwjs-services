<table class='table table-striped table-hover'>
  <thead>
    <th>Name</th>
    <th>Status</th>
  </thead>
  <tbody>
    {{#services}}
      <tr>
        <td data-service-name="{{name}}">{{name}}</td>
        <td data-service-status>
          <span class="label label-default">?</span>
          <span class="label label-success hidden">OK</span>
          <span class="label label-danger hidden">Off</span>
        </td>
      </tr>
    {{/services}}
  </tbody>
</table>